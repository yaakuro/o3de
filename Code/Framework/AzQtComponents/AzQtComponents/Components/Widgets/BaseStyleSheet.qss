/* ============================================================= */
/* Global styles                                                 */
/* ============================================================= */


*
{
    background-color: transparent;
    color: #d0d0d0;
    font-family: "Open Sans";
    font-weight: 400;
}

QTableView,
QListView,
QTreeView
{
    background-color: #282828;
}

QWidget > QTableView,
QWidget > QListView,
QWidget > QTreeView
{
    /* reset the background-color of views with parents to transparent */
    background-color: #282828;
}

/* Fix frame HLine and VLine drawing. Affects QFrame but not subclasses */
.QFrame[frameShape="1"],
.QFrame[frameShape="2"],
.QFrame[frameShape="4"],
.QFrame[frameShape="5"],
.QFrame[frameShape="6"]
{
    background-color: #444444;
}

QMainWindow:separator
{
    background-color: #111111;
}

QMainWindow::separator:hover
{
    background-color: #1E70EB;
}

QMainWindow,
QDialog,
QDockWidget
{
    color: #d0d0d0;
    background-color: #252525;
}

QTextEdit,
QPlainText,
QPlainTextEdit,
QLineEdit,
QSpinBox,
QDoubleSpinBox,
QComboBox
{
    background-color: #181818;
    border-width: 0px;
    border-color: #e9e9e9;
    font-size: 12px;
    line-height: 16px;
    border-radius: 0px;
}

QTextEdit,
QPlainText,
QPlainTextEdit
{
    background-color: #181818;
    margin: 0px;
    border-width: 0px;
    border-style: solid;
}

QTextEdit:hover,
QPlainText:hover,
QPlainTextEdit:hover
{
    margin: 1px;
    border-width: 1px;
    border-style: solid;
    border-color: #222222;
}

QTextEdit:focus,
QPlainText:focus,
QPlainTextEdit:focus
{
    border-width: 1px;
    border-color: #94D2FF;
    background-color: #181818;
}

QSizeGrip {
    /* This is a workaround for the case that file dialogs resize corner seem
     * to overlap with the buttons. */
	width: 4px;
	height: 4px;
	margin-top: 2px;
	margin-right: 2px;
	margin-bottom: 2px;
	margin-left: 2px;
}

